{
    "compilerOptions": {
      "lib": [
        "dom",
        "esnext"
      ],
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "module": "amd",
      "target": "ES6",
      "moduleResolution": "node",
      "strict": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "jsx": "preserve",
      "jsxFactory": "h",
      "allowJs": true
    },
    "include": [
      "./**/*.ts"
    ],
    "compileOnSave": false
  }
